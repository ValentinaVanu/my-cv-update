-
  var myFullName = 'Valentina G. Vanu'
  var myTitle = 'Junior Front-End Developer'
  var header = '#about me'
  var imgPath = 'asset/image/valentina-vanu-avatar.jpg'
  var slogan = 'I translate geek into English and I am a problem solver driven by challenge. Work is my passion and I focus on innovation and design for the future.'
  var achievement = {
    title: 'Achievements',
    content: `Building a page that scores 100/100 on Google Page Speed Insights is probably the biggest achievement in my carrier as a Web Developer so far.`
  }
  var coolStuff = {
    title: 'Please help yoursef to more information',
    linkList: [
      {
        url: "https://github.com/ValentinaVanu/my-cv-update",
        icon: "github",
        text: "Click to visit the GitHub project source"
      }
      ,{
        url: "asset/doc/Valentina G Vanu Resume.docx",
        icon: "file-word",
        text: "Click to download the Microsoft Word version"
      }
    ]
  }
#about-me
.about-me
  .about-me__header=header
  .about-me__avatar-wrapper
    img.about-me__avatar(src=imgPath)
  .about-me__full-name=myFullName
  .about-me__title=myTitle
  p=slogan
  .about-me__title=achievement.title
  p=achievement.content
  .about-me__title=coolStuff.title
  .about-me__link-list
    each link in coolStuff.linkList
      a.about-me__link(href=link.url)
        span.about-me__link-description=link.text
        span(class=`my-cv__icon--${link.icon}`)




